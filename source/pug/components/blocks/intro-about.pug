mixin intro-about()
  section.intro-about
    .container
      .intro-about__bg-wave
        +icon("icon-bg-intro-wave", "736", "353", true)
      .intro-about__bg-wave-mobile
        +icon("icon-bg-intro-wave", "382", "206", true)
      .intro-about__wrapper
        .intro-about__bg-blur
            +img("content", "blur-intro-about", "png", 669, 367, "")
        .intro-about__bg-blur-mobile
            +img("content", "blur-intro-about-mobile", "png", 519, 318, "")
        h1.intro-about__title About Us
        ul.intro-about__breadcrumb
            li.intro-about__item
                a(href="#index.html").intro-about__link Home 
                .intro-about__next
                    include ../../../img/svg/arrow-breadcrumbs.svg
            li.intro-about__item.intro-about__item--last
                span(href="#").intro-about__link.current About us
